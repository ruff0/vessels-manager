# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                    controllers.Vessels.index
GET         /vessels             controllers.Vessels.list(page: Option[Int], max:Option[Int], filter: Option[String])
POST        /vessels             controllers.Vessels.create
PUT         /vessels/:id         controllers.Vessels.edit(id: String)
DELETE      /vessels/:id         controllers.Vessels.delete(id: String)


# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file        controllers.Assets.at(path="/public", file)
